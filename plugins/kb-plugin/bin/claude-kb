#!/usr/bin/env node

// Claude KB Plugin Wrapper
// This wrapper calls the main CLI from the built distribution

const path = require('path');
const { spawn } = require('child_process');

// Find the main CLI relative to this plugin location
const pluginDir = __dirname;  // /path/to/plugins/kb-plugin/bin
const fs = require('fs');

// Try plugin bin directory first (versioned plugin cache structure)
let cliPath = path.join(pluginDir, 'cli.js');

// Try plugin dist directory (if plugin has its own dist)
if (!fs.existsSync(cliPath)) {
  const pluginRoot = path.resolve(pluginDir, '..');
  cliPath = path.join(pluginRoot, 'dist', 'cli.js');
}

// Fallback to repo root structure (development/repository structure)
if (!fs.existsSync(cliPath)) {
  const repoRoot = path.resolve(pluginDir, '../../..');  // Go up 3 levels to repo root
  cliPath = path.join(repoRoot, 'dist', 'cli.js');
}

// Forward all arguments to the main CLI
const args = process.argv.slice(2);

// Spawn the main CLI process
const child = spawn('node', [cliPath, ...args], {
  stdio: 'inherit', // Forward stdin/stdout/stderr
  env: process.env   // Forward environment variables
});

// Forward exit code
child.on('exit', (code) => {
  process.exit(code || 0);
});

// Handle errors
child.on('error', (err) => {
  console.error('Error running claude-kb:', err.message);
  process.exit(1);
});